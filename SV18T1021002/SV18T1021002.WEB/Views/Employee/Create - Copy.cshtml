@model SV18T1021002.DomainModel.Employee
@{

}
<div class="box box-primary">
    <div class="box-header with-border">
    </div>
    <div class="box-body">
        <form class="form-horizontal" action="~/employee/save" enctype="multipart/form-data" method="post">
            <input type="hidden" name="EmployeeID" value="@Model.EmployeeID" />
            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh:</label>
                <div class="col-sm-10">
                    <input type="file"
                           class="form-control"
                           id="Photo"
                           name="Photo"
                           placeholder="Gửi" accept="image/*">
                
                    <img id="preview" src="#"  class="hidden" style=" height: 200px; width: 200px;"/>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Họ:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @autofocus = "autofocus" })
                    @Html.ValidationMessageFor(m => m.LastName, "", new { @style = "color:red" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Tên:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @autofocus = "autofocus" })
                    @Html.ValidationMessageFor(m => m.FirstName, "", new { @style = "color:red" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Ngày sinh:</label>
                <div class="col-sm-10">
                    @*<input type="date"
                           class="form-control"
                           id="Birthdate"
                           name="Birthdate"
                           placeholder="" value="@Model.Birthdate">*@
                    @Html.EditorFor(model => model.Birthdate, new { htmlAttributes = new { @class = "form-control form-input" } })
                    @Html.ValidationMessageFor(model => model.Birthdate, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Email:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @autofocus = "autofocus" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @style = "color:red" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Password:</label>
                <div class="col-sm-10">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @autofocus = "autofocus" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @style = "color:red" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Ghi chú:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Notes, new { @class = "form-control", @autofocus = "autofocus" })
                    @Html.ValidationMessageFor(m => m.Notes, "", new { @style = "color:red" })
                </div>
            </div>




            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit"
                            class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>
                    <a href="~/employee" class="btn btn-default">
                        <i class="fa fa-backward"></i>Quay lại
                    </a>
                </div>

            </div>

        </form>
    </div>
    <div class="box-footer">

    </div>


</div>
@* script của upload *@

<script>

    Photo.onchange = evt => {

        const [file] = Photo.files

        if (file) {

            preview.src = URL.createObjectURL(file);

            $("#preview").removeClass("hidden");

        }

    }

</script>