@model SV18T1021002.WEB.Models.EmployeeBasePaginationResult
@{
    ViewBag.Title = "Nhân viên";
}

<div class="box box-primary">
    <div class="box-header with-border">

    </div>
    <div class="box-body">
        <form action="~/employee" method="get">
            <div class="input-group">
                <input type="text" name="searchvalue"
                       class="form-control"
                       placeholder="Nhập tên hoặc địa chỉ cần tìm"
                       autofocus value="@Model.SearchValue">
                <span class="input-group-btn">
                    <button type="submit"
                            id="search-btn"
                            class="btn btn-flat btn-info">
                        <i class="fa fa-search"></i>
                    </button>
                    <a href="~/employee/create"
                       class="btn btn-flat btn-primary"
                       style="margin-left:10px">
                        <i class="fa fa-plus"></i>
                        Bổ sung
                    </a>
                </span>

            </div>
        </form>
        <p style="margin-top:auto">
            Có <strong>@Model.RowCount</strong> nhân viên trong tổng số <strong>@Model.PageCount</strong> trang.
        </p>

        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <tr class="bg-primary">
                        <th>Ảnh</th>
                        <th>Họ</th>
                        <th>Tên</th>
                        <th>Ngày sinh</th>
                        <th>Email</th>
                        <th>Ghi chú</th>
                        <th style="width:120px"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Data)
                    {
                        <tr>
                            <td><img src="@item.Photo" style="display: block; margin-left: auto; margin-right: auto; height:200px; width:200px;" /></td>
                            <td>@item.LastName</td>
                            <td>@item.FirstName</td>
                            <td>@item.Birthdate.ToString("dd/MM/yyyy")</td>
                            <td>@item.Email</td>
                            <td>@item.Notes</td>
                            <td class="text-right">
                                <a href="~/employee/edit/@item.EmployeeID"
                                   class="btn btn-xs btn-info">
                                    <i class="fa fa-edit"></i>Sửa
                                </a>
                                <a href="~/employee/delete/@item.EmployeeID"
                                   class="btn btn-xs btn-danger">
                                    <i class="fa fa-trash"></i>Xóa
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
    <!-- /.box-body -->
    <div class="box-footer">
        <div class="text-center">
            <ul class="pagination">
                @for (int i = 1; i <= Model.PageCount; i++)
                {
                    if (i == Model.Page)
                    {
                        <li class="active"><a href="~/employee?page=@i&searchValue=@Model.SearchValue">@Model.Page</a></li>
                    }
                    else
                    {
                        <li><a href="~/employee?page=@i&searchValue=@Model.SearchValue">@i</a></li>
                    }
                }
            </ul>
        </div>
    </div>
    <!-- /.box-footer-->
</div>
