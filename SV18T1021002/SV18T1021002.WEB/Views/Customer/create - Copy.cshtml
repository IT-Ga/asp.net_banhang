@model SV18T1021002.DomainModel.Customer
@{
    
}
<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/customer/save" method="post">
            <input type="hidden" name="CustomerID" value="@Model.CustomerID" />

            <div class="form-group">
                <label class="control-label col-sm-2" for="email" autofocus>Tên Khách Hàng:</label>
                <div class="col-sm-10">
                    @*<input type="text"
                           class="form-control"
                           id="CustomerName"
                           name="CustomerName"
                           placeholder="" autofocus value="@Model.CustomerName">*@
                    @Html.TextBoxFor(m => m.CustomerName, new {@class = "form-control"})
                    @*@Html.ValidationMessage("CustomerName")*@
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="ContactName  ">Tên giao dịch  :</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           id="ContactName"
                           name="ContactName"
                           placeholder="" value="@Model.ContactName">
                    @*@Html.ValidationMessageFor(m => m.ContactName)*@
                </div>
            </div>


            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Địa chỉ:</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           id="Address"
                           name="Address"
                           placeholder="" value="@Model.Address">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="Country">Quốc Gia:</label>
                <div class="col-sm-10">
                    <select class="form-control"
                            id="Country"
                            name="Country">
                        @foreach (var country in SV18T1021002.BusinessLayer.CommonDataService.ListOfCountries())
                        {
                            if (country.CountryName == Model.Country)
                            {
                                <option value="@country.CountryName" selected>@country.CountryName</option>
                            }
                            else
                            {
                                <option value="@country.CountryName">@country.CountryName</option>
                            }


                        }
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="City">Thành phố:</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           id="City"
                           name="City"
                           placeholder="" value="@Model.City">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="PostalCode">Mã bưu chính:</label>
                <div class="col-sm-10">
                    <input type="text"
                           class="form-control"
                           id="PostalCode"
                           name="PostalCode"
                           placeholder="" value="@Model.PostalCode">
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10 text-danger">
                    @Html.ValidationSummary()
                </div>
            </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit"
                                class="btn btn-primary">
                            <i class="fa fa-save"></i> Lưu dữ liệu
                        </button>
                        <a href="~/customer" class="btn btn-default">
                            <i class="fa fa-ban"></i> Quay lại
                        </a>
                    </div>
                </div>


        </form>

    </div>
</div>



